{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "esnext"
    ],
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "app/*": ["src/app/*"]
    },
    "esModuleInterop": true,
    "plugins": [
        { "transform": "@zerollup/ts-transform-paths" }
    ]
  }
}
